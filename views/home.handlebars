{{!-- Landing page --}}
<main class="uk-flex uk-flex-center uk-flex-column uk-text-center background-img video-wrapper"
    uk-height-viewport="offset-top: true;offset-bottom: 8"> {{!-- <-- Creates body height but offsets the header and footer elements --}}
    
    <div class="home-page-h2-div">
        <h2 class="uk-heading-medium change-color">Your digital movie collection in one place</h2>
    </div>

    <div class="home-page-h3-div">
        <h3 class="change-color">Search for your favorite movies or find new favorites and save them to your collection
        </h3>
        <h4 class="change-color">Click below to get started!</h4>
    </div>

    <div class="home-page-button-div uk-align-center">
        <div class="uk-card uk-card-default uk-card-body uk-card-hover uk-card-small">
            <a class="home-page-button uk-button uk-button-primary" href="/browse">Browse Movie Collections</a>
        </div>
    </div>

    {{!-- Background video element --}}
    <div class="overlay"></div> {{!-- Creates an overlay element. CSS properties in style.css --}}
    <video playsinline autoplay muted loop>
        <source src="/assets/images/Movie_reel.mov" type="video/webm">
        Your browser does not support the video tag.
    </video>
</main>